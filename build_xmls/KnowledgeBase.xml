<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Knowledge Base Module Test Cases"
       verbose="10"
       parallel="tests"
       thread-count="3"
       allow-return-values="true">

    <!-- Navigate to Knowledge Base page -->
    <test name="Verify navigation of Knowledge Base Page">
        <classes>
            <class name="Tests.KnowledgeBaseTest">
                <methods>
                    <include name="goToKnowledgeBasePage"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Verify columns and elements -->
    <test name="Verify Columns and Elements">
        <classes>
            <class name="Tests.KnowledgeBaseTest">
                <methods>
                    <include name="verifyColumnsAndElements"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Validate search functionality -->
    <test name="Validate Search Functionality">
        <classes>
            <class name="Tests.KnowledgeBaseTest">
                <methods>
                    <include name="validateSearch"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Validate horizontal view -->
    <test name="Validate Horizontal View">
        <classes>
            <class name="Tests.KnowledgeBaseTest">
                <methods>
                    <include name="validateHorizontalView"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Validate create page elements -->
    <test name="Validate Create Page Elements">
        <classes>
            <class name="Tests.KnowledgeBaseTest">
                <methods>
                    <include name="validateCreatePageElements"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Validate file upload -->
    <test name="Validate File Upload">
        <classes>
            <class name="Tests.KnowledgeBaseTest">
                <methods>
                    <include name="validateFileUpload"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Validate adding text -->
    <test name="Validate Adding Text">
        <classes>
            <class name="Tests.KnowledgeBaseTest">
                <methods>
                    <include name="validateAddingText"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Validate adding website -->
    <test name="Validate Adding Website">
        <classes>
            <class name="Tests.KnowledgeBaseTest">
                <methods>
                    <include name="validateAddingWebsite"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>
