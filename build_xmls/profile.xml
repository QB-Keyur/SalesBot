<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Profile Module Test Cases"
       verbose="10"
       parallel="tests"
       thread-count="3"
       allow-return-values="true">

    <!-- Verify all menu and elements are showing properly on profile page -->
    <test name="Verify profile page menu and elements">
        <classes>
            <class name="Tests.profileTest">
                <methods>
                    <include name="verifyAllTheMenuAndElementsAreShowingProperly"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Verify all labels are showing on profile page -->
    <test name="Verify profile page labels">
        <classes>
            <class name="Tests.profileTest">
                <methods>
                    <include name="verifyAllTheLabelIsShowingOnProfileMenu"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Verify change password page labels, inputs and buttons -->
    <test name="Verify change password page elements">
        <classes>
            <class name="Tests.profileTest">
                <methods>
                    <include name="verifyAllTheLabelAndInputsOnChangePassword"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>
